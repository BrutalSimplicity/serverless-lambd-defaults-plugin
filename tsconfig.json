{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "declaration": false
  },
  "include": [
    "src/**/*",
  ]
}
