{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "sourceMap": false,
      "allowJs": false,
      "moduleResolution": "node",
      "outDir": "./dist",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "strict": true,
      "noUnusedLocals": true,
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": false,
      "declaration": false,
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
    },
    "include": [
      "src/**/*",
    ]
  }
